# BeraMind Security Scanner Configuration

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PRIMARY=llama3.2:latest

# Popular model alternatives:
# OLLAMA_MODEL_PRIMARY=deepseek-r1:14b     # Best for reasoning
# OLLAMA_MODEL_PRIMARY=codellama:13b       # Code specialized
# OLLAMA_MODEL_PRIMARY=qwen2.5-coder:14b  # Code focused
# OLLAMA_MODEL_PRIMARY=llama3.2:3b         # Lightweight option

# Scanner Settings
MAX_CONCURRENT_SCANS=2
MAX_FILE_SIZE=1048576
SCAN_TIMEOUT=300

# Output Settings
RESULTS_FOLDER=results
TEMP_FOLDER=temp_repos
LOGS_FOLDER=logs

# Flask Settings (if using web UI)
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=change-this-in-production
